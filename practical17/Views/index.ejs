<!DOCTYPE html>
<html>
  <head>
    <title>Tuition Admin Panel</title>
  </head>
  <body style="font-family: Arial; text-align: center">
    <h1>🎓 Tuition Admin Panel</h1>
    <a href="/add">➕ Add Student</a>
    <br /><br />
    <table border="1" cellspacing="0" cellpadding="8" align="center">
      <tr>
        <th>Name</th>
        <th>Roll No</th>
        <th>Class</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rollNo %></td>
        <td><%= student.class %></td>
        <td><%= student.email %></td>
        <td>
          <a href="/edit/<%= student._id %>">✏️ Edit</a> |
          <a
            href="/delete/<%= student._id %>"
            onclick="return confirm('Delete this student?')"
            >🗑️ Delete</a
          >
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
